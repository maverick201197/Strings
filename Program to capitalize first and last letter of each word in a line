#include<bits/stdc++.h>
using namespace std;
int main()
{
    string str;
    cout<<"enter a string" <<endl;
    getline(cin,str);
    int i = 0;
    int length = 0;
    while(str[length]!='\0')
    {
        length++;
    }
    for(i=0; i<length; i++)
    {
        if(i==0 || str[i-1] == ' ')
        {
            str[i]=toupper(str[i]);
        }
        else if(str[i+1]==' ' || str[i+1]=='\0')
        str[i]=toupper(str[i]);
    }
    cout<<str<<endl;
    }


