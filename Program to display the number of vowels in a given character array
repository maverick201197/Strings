#include<bits/stdc++.h>
using namespace std;
int main()
{
    char str[100];
    cout<<"enter a string" <<endl;
    cin>>str;
    int cntv=0,cntc=0;
    char *ptr;
    ptr=str;
    while(*ptr!='\0')
    {
        if(*ptr=='a' || *ptr=='e' || *ptr=='i' || *ptr=='o' || *ptr=='u' || *ptr=='A' || *ptr=='E' || *ptr=='I' || *ptr=='O' || *ptr=='U')
        cntv++;
        else
        cntc++;
        ptr++;
    }
    cout<<"Total number of vowels is : " << cntv <<endl;
    cout<<"Total number of consonants is : " << cntc <<endl;
    return 0;
}


enter a string
characterization
Total number of vowels is : 7
Total number of consonants is : 9
