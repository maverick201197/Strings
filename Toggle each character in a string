#include<bits/stdc++.h>
using namespace std;
int main()
{
    char str[100];
    cout<<"enter a string" <<endl;
    cin>>str;
    int i;
    for(i=0; str[i]!=' '; i++)
    {
        if(islower(str[i]))
        {
            str[i] = toupper(str[i]);
        }
        else
        {
            str[i] = tolower(str[i]);
        }
    }
    cout<<"after toggling the string is :" << str;
    return 0;
 }
 
 enter a string
AaKrIti
after toggling the string is :aAkRiTI
